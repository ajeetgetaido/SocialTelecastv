<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rathore.socialtelecast.createGroup">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GroupName"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/edGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:inputType="textPersonName"
        android:hint="Name"
        tools:layout_editor_absoluteY="89dp"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/tvGroupMemberEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Member Email ID"
       android:layout_marginTop="@dimen/activity_vertical_margin"
        tools:layout_editor_absoluteY="165dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/edGroupMemberEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:ems="17"
        android:hint="email ID"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <Button
        android:id="@+id/btnAddEmail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Add Email"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Done"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="350dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
